@model IEnumerable<ClothingStore.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Invoice</h1>

<p>

    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Seller")
            </th>
            <th>
                @Html.DisplayName("Nama Pembeli")
            </th>
            <th>
                @Html.DisplayName("ID Produk")
            </th>
            <th>
                @Html.DisplayName("Nama Produk")
            </th>
            <th>
                @Html.DisplayName("Total Harga")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaSeller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPembeli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHarga)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrder"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdOrder"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrder"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
